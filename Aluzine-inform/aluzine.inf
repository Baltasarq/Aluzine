! -----------------------------------------------------------------------------
Object Cache "Caché"
with
      tiempo_restante 20,
      tiempo_agotado [;
            print "El brazo robotizado, que empieza ya a ser familiar, te
                   te recoge y te coloca de nuevo en el BUS DATA, el destino
                   es... ^";

            jugadorA(ULA, 2);

            print "El carrito avanza por el BUS, a toda velocidad...^";

            rtrue;
      ],
      descripcion "Estás en otra gran caja, como la anterior, pero, en este
                   caso, no hay etiquetas, sino indicadores, que cada vez que
                   se encienden, provocan la salida de los otros como tú, tal y como
                   ves constantemente a tu alrededor.^
                   Hay un avisador, con las siglas ~CPU~ marcadas en blanco en su parte superior.
                   Es como un gran marcador, en el centro de esta caja,
                   que cambia, vertiginosa, contínuamente, y según puedes ver, cada vez que cambia salen
                   otros como tú de sus plazas hacia el DATA BUS. No puedes saber
                   cuál es su destino, pero supones que será distinto para cada una
                   de las operaciones."
has luz;

Object Indicador "indicador" Cache
with
      nombre 'indicador',
      descripcion "Los indicadores son como bombillas, que, cuando se encienden,
                   provoca la salida de las otras ~cosas~ de sus plazas.^
                   Tú tienes el tuyo. Sientes que, de alguna forma, directamente, podrías activarlo.",
      antes [;
            empujar, quemar: PararReloj(cache);
                     print "Ese familiar brazo robotizado te recoge, y te coloca
                            en el DATA BUS... ves de reojo como otra línea de IRQ se activa...
                            ^la velocidad aumenta... te diriges a una parte que ya te resulta
                             extrañamente familiar...
                            ^^";
                     if (avisador.estado == 3)
                     {
                           jugadorA(DMA, 2);
                     }
                     else jugadorA(ULA, 2);
                     rtrue;
      ]
has estatico;

Object avisador "avisador" Cache
with
      estado 0,
      nombre 'avisador' 'marcador' 'negro',
      descripcion [;
            print "El avisador parece marcar contínuamente las operaciones de la CPU.
                   Cada vez que te fijas en él, ya no marca lo que marcaba antes...
                   ^Ahora mismo marca: ";
            if (self.estado == 0)
            {
                  print "SHL";
            }
            else
            if (self.estado == 1)
            {
                  print "SHR";
            }
            else
            if (self.estado == 2)
            {
                  print "I/O";
            }
            else
            if (self.estado == 3)
            {
                  print "ADD";
            }
            else
            if (self.estado == 4)
            {
                  print "MUL";
            }

            print "^^";
      ],
      cada_turno[;
            self.estado++;
            self.estado = self.estado % 5;
      ]
has estatico;

