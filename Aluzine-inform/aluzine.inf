object jugadorHumano
with
      pensar [x;
             print (s_bold) "Piensas: ~";
             s_underline();
             print (string) x;
             s_normal();
             print "~.^";
      ],
      viajeHecho false,
      descripcion "Estás hecho un asco, necesitas una ducha y un
                   buen sueñecito.",
      cada_turno [;
            if (jugador == self) ! Comprobación superflua, me temo.
            {
                  if (~~(self.viajeHecho))
                  {
                    if ((turnos % 4) == 0)
                    {
                          self.pensar(toiCansau.dev_msg());
                    }
                  }
                  else {
                          self.pensar(toiAluzinao.dev_msg());
                  }
            }
      ],
      reaccionar_antes [;
            dormir: "Oh, sí, sí, sí. Ojalá pudieras hacerlo ahora mismo...";
      ]
;

object jugadorWord
