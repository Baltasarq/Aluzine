            Probar: "¡Pero si no tienes boca!";
            inv: "¿Dónde se supone que podría guardar las cosas?";
      ]
;

[ Inicializar;
	! Describe siempre del todo
	modomirar = 2;
	! Tú, como si fueras tonto
	parser_listo = false;
	! No digas nada sobre la puntuación (0 ó 1 sobre 1, está bastante claro)
	modo_notificar = 0;

	! Poner al jugador en su sitio
	cambiarJugador(jugadorHumano);
