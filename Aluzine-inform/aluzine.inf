Object LineaIRQ "líneas de IRQ" RAM
with
      esta_en [;
            if (localizacion == RAM
             || localizacion == Cache)
            {
                   rtrue;
            }
            else   rfalse;
      ],
      nombre 'lineas' 'linea' 'irq' 'roja' 'activa' 'activada',
      inicial "Desde aquí puedes ver las líneas de IRQ.",
      descripcion [;
            print "Hay varias líneas de IRQ, cada una etiquetada con su número. ";
